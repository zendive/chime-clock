{
    "name":                   "Chime Clock",
    "description":            "Retro chiming clock unobtrusive background sound.",
    "author":                 "Alexander Block",
    "version":                "1",
    "manifest_version":       2,
    "minimum_chrome_version": "23",
    "icons":                  {
        "16":  "icons/icon16.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background":             {
        "scripts":    [
            "src/background.js"
        ],
        "persistent": true
    },
    "browser_action":         {
        "default_icon":  "icons/icon19.png",
        "default_title": "Chime Clock setup",
        "default_popup": "src/popup.html"
    },
    "permissions":            [
        "tts"
    ]
}